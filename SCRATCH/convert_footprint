#!/usr/bin/perl
use Benchmark;
my $t0 = new Benchmark;

my $noOfArg = @ARGV;
my $input_file = "";
if($ARGV[0] eq "-h" || $ARGV[0] eq "-help" || $ARGV[0] eq "-HELP"){
   print "Usage : convert_footprint <fileName>\n";
}else{
  for(my $xx=0; $xx<$noOfArg; $xx++){
    if($ARGV[$xx] eq "-footprint"){$input_file = $ARGV[$xx+1];}

  }#for
}#else
&read($input_file);

my $t1 = new Benchmark;
my $td = timediff($t1, $t0);
print "script convert_footprint took:",timestr($td),"\n";
