#!/usr/bin/perl

my $outFile = "./defViewer.pl";
open (OUTFILE, "> $outFile") || die ("Couldn't open $outFile for writing");

my $inFile = "./UTILS/tool.nopath";
open (INFILE, " $inFile") || die ("Couldn't open $inFile for reading");

# get cwd
chomp($toolDir = `pwd`);

print OUTFILE <<EOT_;
#!/usr/bin/perl

######### set BEEHOME to cwd ##########
my \$BEEHOME = \"$toolDir\";

######### Now appending $inFile ########

EOT_

$inLine = <INFILE>;
while ($inLine) {
  print OUTFILE $inLine;
  $inLine = <INFILE>;
}
close (INFILE);

close (OUTFILE);

