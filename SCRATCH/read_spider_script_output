#! /usr/bin/perl

my @AGRV = @_;
if( $ARGV[0] eq '-h' || $ARGV[0] eq '-help' ) { 
  print "Usage : ./read_spider_script_output\n";
  print "                  -fname <file name to read [default name is \"config_file\"]> \n";
  print "                  -outname <output script file name [default name is \"run.tcl\"]> \n";
} else { # if correct no. of inputs
  my $config_file = "config_file";
  my $scriptfile = "run.tcl";
  my $techleffiles = ""; my $techlef = 0;
  my @leffiles = ();     my $lef = 0;
  my $deffiles = "";     my $def = 0;
  my @netlistfiles = (); my $netlist = 0;
  my @libfiles = ();     my $lib = 0;
  my @sdcfiles = ();     my $sdc = 0;
  my @rtlfiles = ();     my $rtl = 0;
  my $modulename = "";   my $top = 0;
  for(my $i = 0; $i <= $#ARGV; $i++) {
    if($ARGV[$i] eq "-fname")         { $config_file = $ARGV[$i+1]; }
    if($ARGV[$i] eq "-outname")       { $scriptfile = $ARGV[$i+1]; }
  }
   if(-r $config_file){
    open (READ, $config_file);
    while (<READ>) {
      chomp;
      if($_ =~ /^\s*#/ ){next;}
      if($_ =~ /^\#/ ){next;}
      my ($filetype,$filename)=(split(/\:\s*/,$_))[0,1];
      if($filetype eq "TECHLEF"){
        $techlef = 1;
        $techleffiles = $filename;
      }elsif($filetype eq "LEF"){
        $lef = 1;
        push(@leffiles, $filename);
      }elsif($filetype eq "LIB"){
        $lib = 1;
        push(@libfiles, $filename);
      }elsif($filetype eq "DEF"){
        $def = 1;
        $deffiles = $filename;
      }elsif($filetype eq "NETLIST"){
        $netlist = 1;
        push(@netlistfiles, $filename);
      }elsif($filetype eq "SDC"){
        $sdc = 1;
        push(@sdcfiles, $filename);
      }elsif($filetype eq "RTL"){
        $rtl = 1;
        push(@rtlfiles, $filename);
      }elsif($filetype eq "TOP"){
        $top = 1;
        $modulename = $filename;
      }
    }#while read
    close(READ);
      if($lef == 1 && $def == 1){
        print "PLEASE SELECT ONLY DEF OR NETLIST FILE NOT BOTH\n";
        exit;
      }else{
        open (WRITE, ">$scriptfile");
        if($techlef == 1){
          print WRITE "read_lef -lef $techleffiles -tech also\n"; 
        }  
        if($lef == 1){
          foreach my $file(@leffiles){
            print WRITE "read_lef -lef $file\n"; 
          }
        }  
        if($lib == 1){
          foreach my $file(@libfiles){
            print WRITE "read_lib -lib $file\n"; 
          }
        }  
        if($def == 1){
            print WRITE "read_def -def $deffiles --all\n"; 
        }  
        if($netlist == 1){
          foreach my $file(@netlistfiles){
            print WRITE "read_verilog -v $file\n"; 
          }
          print WRITE "elaborate\n";
          print WRITE "set_floorplan_parameters\n";
          if($top == 1){
            print WRITE "set_floorplan -partition $modulename\n";
          }else{
            print WRITE "set_floorplan\n";
          }     
        }  
        if($sdc == 1){
          foreach my $file(@sdcfiles){
            print WRITE "read_sdc -sdc $file\n"; 
          }
        }  
        if($rtl == 1){
          foreach my $file(@rtlfiles){
            print WRITE "read_rtl -rtl $file\n"; 
          }
        }  
      }
    close(WRITE);
  } else {
    print"file not readable\n";
  }
  }#else


